<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EVInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="Add Ev"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="160sp"
            android:layout_gravity="center"
            android:src="@drawable/ev_info"/>

        <TextView
            android:id="@+id/textAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:text="No EV Added Yet"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:text="It seems that you have not added any EV yet , Let's Get Started by Adding one Below."
            android:textSize="18dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="136dp"
            android:backgroundTint="@color/colorAccent"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add EV" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>